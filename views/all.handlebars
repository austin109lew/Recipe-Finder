<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      &#127869 Feast Finder Menu
    </h2>
  </div>
  {{#each recipes}}
  <div class="recipe col-md-4">
    <p>
      {{this.name}}
    </p>
  </div>
  <div class="col-md-5">
    <p>
      Ingredients: {{this.ingredients}}
    </p>
  </div>
  <div class="col-md-3">
    ğŸ¥œ: {{#if this.has_nuts}} Contains nuts {{else}} No nuts {{/if}}
  </div>
  {{/each}}
  <!-- This is the form for adding a new recipe -->
  <div class="add-recipe-container">
    <h2>
      Share Your Recipe!
    </h2>
    <form class="new-recipe-form">
      <label for="recipe_name">
        Recipe Name:
      </label>
      <br />
      <textarea id="recipe_name" name="recipe_name" rows="2" cols="30"></textarea>
      <br />
      <label for="ingredients">
        Ingredients:
      </label>
      <br />
      <textarea id="ingredients" name="ingredients" rows="5" cols="30"></textarea>
      <br />
      <label for="has_nuts">
        Check box if this recipe contains nuts
      </label>
      <br />
      <input type="checkbox" id="has_nuts" name="has_nuts" />
      <br />
      <button type="submit" value="Submit">
        Submit
      </button>
    </form>
  </div>
</div>

<script src="/js/add-recipe.js"></script>


